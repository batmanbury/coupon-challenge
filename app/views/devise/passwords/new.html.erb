<div class="container">
  <div class="form-col form-col col-xs-12 col-sm-10 col-md-8 col-lg-4">
    <h2 class="page-header text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "form-horizontal center", method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="actions">
        <%= f.submit "Reset password", class: "btn btn-success btn-lg btn-block" %>
      </div>
    <% end %>
    <br>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
